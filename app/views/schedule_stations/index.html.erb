

<p id="notice"><%= notice %></p>

<h1>Schedule Stations</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Departure</th>
    <th>Arrival</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% schedule_stations.each do |schedule| %>
    <tr>
      <td><%= schedule.station&.station_name %></td>
      <td><%= schedule.arrival %></td>
      <td><%= schedule.departure %></td>
      <td><%= link_to 'Show', schedule %></td>
      <td><%= link_to 'Edit', edit_schedule_station_path(schedule) %></td>
      <td><%= link_to 'Destroy', schedule, method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<br>